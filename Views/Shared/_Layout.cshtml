<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForneceMais</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>

    <header>
        <nav class="nav-bar">
            <div class="logo">
                <a asp-controller="Fornecedor" asp-action="Index">Fornece+</a>
            </div>

            <ul class="nav-list">
                <li class="nav-item"><a asp-controller="Fornecedor" asp-action="Index">Início</a></li>
                <li class="nav-item"><a asp-controller="Fornecedor" asp-action="Create">Adicionar</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="About">Sobre</a></li>
            </ul>

            <div class="nav-button">
                <button>Entrar</button>
            </div>

            <div class="mobile-menu-icon">
                <button onclick="menuShow()"><img src="~/img/menu_white_36dp.svg" alt="" class="icon"></button>
            </div>
        </nav>


        <div class="mobile-menu">
            <ul class="mobile-list">
                <li class="nav-item"><a asp-controller="Fornecedor" asp-action="Index">Início</a></li>
                <li class="nav-item"><a asp-controller="Fornecedor" asp-action="Create">Adicionar</a></li>
                <li class="nav-item"><a asp-controller="Home" asp-action="About">Sobre</a></li>
            </ul>

            <div class="nav-button">
                <button>Entrar</button>
            </div>
        </div>
    </header>
    <div class="wrapper">

        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - Fornece+ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
